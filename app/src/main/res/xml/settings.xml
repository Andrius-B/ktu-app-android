<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Bendri nustatymai">

        <ListPreference
            android:key="selected_semester"
            android:title="Einamas semsteras" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Pažymiai">

        <ListPreference
            android:key="update_interval"
            android:title="Atnaujinti kas"
            android:defaultValue="15"
            android:summary="Duomenų atnaujinimo intervalas" />

        <CheckBoxPreference
            android:key="show_notification"
            android:title="Rodyti pranešimus"
            android:summary="Gavus naują pažymį apie tai bus prenešta pranešimu."
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Kiti">

        <Preference
            android:key="logout"
            android:title="Atsijungti">

        </Preference>

        <Preference
            android:key="about"
            android:title="Apie">

        </Preference>

    </PreferenceCategory>

</PreferenceScreen>